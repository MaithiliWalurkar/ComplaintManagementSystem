
@{
    ViewBag.Title = "_DashboardLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Complaint Management System</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/Content/assets/favicon.ico" />

    <!-- Bootstrap icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Core theme CSS (includes Bootstrap) -->
    <link href="~/Content/css/styles.css" rel="stylesheet" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            padding-top: 70px;
        }

        .sidebar {
            position: fixed;
            top: 51px;
            bottom: 0;
            left: 0;
            width: 200px;
            padding: 20px;
            background-color: #2c3e50;
            color: white;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px;
                margin-bottom: 5px;
                text-decoration: none;
                border-radius: 4px;
            }

                .sidebar a:hover {
                    background-color: #3498db;
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
        }

        .navbar-inverse {
            background-color: #2c3e50;
            border-color: #2c3e50;
        }

            .navbar-inverse .navbar-brand,
            .navbar-inverse .navbar-nav > li > a {
                color: #ecf0f1;
            }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Complaint Management</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">Welcome @Session["UserEmail"]</a></li>
                <li>@Html.ActionLink("Log out", "Login", "Login")</li>

            </ul>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <div class="sidebar" style="border-top: 1px solid;">
        @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
        {
            <a href="/Admin/AdminDashboard">Dashboard</a>
            <a href="/AdminAssign/AssignComplaints">Assign Complaints</a>
            <a href="/Admin/Reports">Reports</a>
            <a href="/Admin/RaiseComplaint">Raise Complaint</a>
            <a href="/Admin/ComplaintStatus">Track Complaints</a>
            <a href="/Admin/ManageUsers">Manage Users</a>
            <a href="/Login/Login">Log Out</a>
        }
        else if (Session["Role"] != null && Session["Role"].ToString() == "Staff")
        {
            <a href="/Staff/StaffDashboard">Dashboard</a>
            <a href="/Staff/AssignedComplaints">My Complaints</a>
            <a href="/Staff/ResolveComplaint">Resolve Complaint</a>
            <a href="/Login/Login">Log Out</a>
        }
        else if (Session["Role"] != null && Session["Role"].ToString() == "Client")
        {
            <a href="/Client/ClientDashboard">Dashboard</a>
            <a href="/ClientRaise/RaiseComplaint">Raise Complaint</a>
            <a href="/ClientTrack/ComplaintStatus">Track Complaints</a>
            <a href="/Login/Login">Log Out</a>
        }
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <!-- jQuery (load first, one copy only) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <!-- FontAwesome Kit -->
    <script src="https://kit.fontawesome.com/c7f52bcea9.js" crossorigin="anonymous"></script>

    <!-- Core theme JS -->
    <script src="~/Scripts/scripts.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

