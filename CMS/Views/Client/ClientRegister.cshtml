@{
    ViewBag.Title = "ClientRegister";
}

<!DOCTYPE html>
<html>
<head runat="server">
    <title>Client Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="~/Content/ClientRegister.css" rel="stylesheet" />
</head>
<body>
    <form id="form1" runat="server">
        <h3>Raise your Issue</h3>
        <div class="form-container">
            <div id="nonOTPSec">
                <div class="input-with-icon">
                    <i class="fa-solid fa-building"></i>
                    <input type="text" placeholder="Company Name" id="companyName" />
                </div>
                <div class="input-with-icon">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Contact Person" id="contactPerson" />
                </div>
                <div class="input-with-icon">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" placeholder="E-Mail" id="email" />
                </div>
                <div class="input-with-icon">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" placeholder="Password" id="password" />
                </div>
                <button type="button" id="btnRegister">Register</button>
            </div>

            <div id="verification-message" style="display: none;">
                OTP sent to your email. Please verify below.
            </div>

            <div id="otp-section" style="display: none;">
                <div class="input-with-icon">
                    <i class="fa-solid fa-key"></i>
                    <input type="text" id="otp" placeholder="Enter OTP" />
                </div>
                <button type="button" id="verify-otp">Verify OTP</button>
            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/ClientRegister.js"></script>
</body>
</html>
