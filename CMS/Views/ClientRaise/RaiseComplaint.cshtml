@{
    ViewBag.Title = "RaiseComplaint";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head runat="server">
    <title>Raise Complaint</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />*@
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Complaint Form -->
            <div class="col-md-6">
                <form id="form1" runat="server" enctype="multipart/form-data" autocomplete="off" class="card p-4 shadow">
                    <h4 class="mb-4 text-primary">Raise Complaint</h4>

                    <div class="mb-3">
                        <label for="txtTitle" class="form-label">Complaint Title</label>
                        <input type="text" id="txtTitle" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label for="ddlCategory" class="form-label">Category</label>
                        <select id="ddlCategory" class="form-control">
                            <option value="">-- Please Select --</option>
                            <option value="Hardware">Hardware</option>
                            <option value="Software">Software</option>
                            <option value="Network">Network</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="ddlPriority" class="form-label">Priority</label>
                        <select id="ddlPriority" class="form-control">
                            <option value="">-- Please Select --</option>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="txtDescription" class="form-label">Description</label>
                        <textarea id="txtDescription" rows="4" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="fileAttachment" class="form-label">Attachment (optional)</label>
                        <input type="file" id="fileAttachment" name="fileAttachment" class="form-control" />
                    </div>

                    <button type="button" id="btnSubmit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>

            <!-- Complaints Grid -->
            <div class="col-md-6">
                <div class="card shadow p-3">
                    <h4 class="mb-3 text-success">My Complaints</h4>
                    <div class="table-responsive">
                        <table id="tblComplaints" class="table table-bordered table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Attachment</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td colspan="5" class="text-center">Loading...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/RaiseComplaint.js"></script>
</body>
</html>
